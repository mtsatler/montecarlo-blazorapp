@page "/userinput"

@inject StateContainer StateContainer
@implements IDisposable

<br />

<h6>Please enter input below.  Input validation has not been implemented yet so be sure to follow instructions</h6>
<h6>Styling is still a work in progress</h6>

<br />
<br />


<div class="container">


    <div class="row">
        <div class="col-sm-auto">
            <p>Portfolio Amount</p>
        </div>
        <div class="col-sm-auto">
            <input id="portfolio-amount" placeholder="Enter Whole Integer" @bind="inputPortfolioAmount" />
        </div>
        <div class="col-sm-auto">
            <p>The starting amount for investment portfolio</p>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-auto">
            <p>Annual Investment Amount</p>
        </div>
        <div class="col-sm-auto">
            <input placeholder="Enter Whole Integer" @bind="inputWithdrawalAmount" />
        </div>
        <div class="col-sm-auto">
            <p>Positive amount for additional investment and negative for withdrawals</p>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-auto">
            <fieldset>
                <legend>Asset Allocation Type</legend>
                <label for="simple">Simple</label>
                <input type="radio" name="allocation" id="simple" value="simple" @onchange="AllocationSwitch" />
                <label for="advanced">Advanced</label>
                <input type="radio" name="allocation" id="advanced" value="advanced" @onchange="AllocationSwitch" />
            </fieldset>
        </div>
    </div>

    @if(allocationType == "simple")
    {
        <SimpleAllocation/>
    } else if(allocationType == "advanced")
    {
        <AdvancedAllocation/>
    }

    <div class="row">
        <div class="col-sm-auto">

            <label for="YearsToSimSelection">How Many Years to Sim</label>

            <select name="yearstosim" @onchange="GetYearsToSimSelection">
                <option value="10">10 Years</option>
                <option value="20">20 Years</option>
                <option value="30">30 years</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-auto">
            <input type="button" @onclick="RunMonteCarloSim" value="Run Monte Carlo" />
        </div>
    </div>


    <MonteCarloResults />

</div>


